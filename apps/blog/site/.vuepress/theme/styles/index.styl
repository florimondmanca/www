@require './variables';

@font-face {
  font-family: Agane;
  font-style: normal;
  font-weight: normal;
  src: url('/blog/fonts/agane/regular.ttf');
}

@font-face {
  font-family: Agane;
  font-style: normal;
  font-weight: 700;
  src: url('/blog/fonts/agane/bold.ttf');
}

@font-face {
  font-family: Agane;
  font-style: normal;
  font-weight: 900;
  src: url('/blog/fonts/agane/heavy.ttf');
}

html, body {
  padding: 0;
  margin: 0;
}

body {
  color: $colorText;
  font-family: 'Agane', Arial, sans-serif;
  font-weight: normal;
  font-size: $font-size;
  line-height: $font-line-height;
}

h1, h2, h3, h4, h5, h6 {
  margin-top: 0;
  margin-bottom: 3 * $space-unit;
}

h1, h2 {
  font-weight: 900;
}

h3, h4, h5, h6 {
  font-weight: normal;
}

h1 {
  font-size: $font-size-h1;
}

h2 {
  font-size: $font-size-h2;
}

h3 {
  font-size: $font-size-h3;
}

p {
  margin-top: 0;
  margin-bottom: 2 * $space-unit;
}

a {
  text-decoration: none;
  border-bottom: 1px solid $colorPrimary;
  transition: background 80ms;
  cursor: pointer;
  color: inherit;

  &:hover {
    background-color: alpha($colorPrimary, 20%);
  }
}

hr {
  margin: 0;
  padding: 0;
  border: 0;
  height: 1px;
  background-color: $colorDivider;
}

@require './components';
@require './util';
