{% macro SocialLinks() %}
<p class="font-bold">
  {{ _('Links') }}
</p>

<ul class="flex flex-row flex-wrap justify-center items-center">
  {% for link in settings.SOCIAL_LINKS %}
  <li class="m-2">
    <a href="{{ link['href'] }}" title="{{ link['title'] }}" target="_blank" rel="noreferrer">
      {{ link['name'] }}
    </a>
  </li>
  {% endfor %}
</ul>
{% endmacro %}
