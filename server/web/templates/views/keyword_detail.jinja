{% extends "base.jinja" %}

{% from "components/meta_tags.jinja" import MetaTags with context %}

{% block head %}
{{ super() }}
{{ MetaTags(keyword) }}
{% endblock head %}

{% block title %}
{{ keyword.meta_title }}
{% endblock title %}

{% block content %}
  <main class="f-container f-box" style="--box-padding: calc(4 * var(--w)) 0">
    <h1>
      Tag: #{{ keyword.name }}
    </h1>

    <div id="blog-posting-list">
      {% include "partials/blog_posting_list.jinja" with context%}
    </div>
  </main>
{% endblock content %}
