@layer components {
  .p-image {
    @apply my-4;
  }
  .p-image > img {
    display: block;
    margin: auto;
    max-width: 100%;
  }
  .p-image > figcaption {
    @apply pt-2;
    @apply italic;
    @apply text-sm;
    @apply text-center;
    @apply text-muted-500;
  }

  .p-nav {
    @apply px-4;
  }
  .p-nav-wrapper {
    @apply text-center;
  }
  @media screen and (min-width: theme("screens.tablet")), print {
    .p-nav-wrapper {
      @apply items-center;
      @apply flex;
      @apply justify-between;
    }
    .p-nav-links {
      @apply flex;
      @apply items-center;
    }
  }

  .c-jumbotron-card {
    @apply text-center;
  }
  @media screen and (min-width: theme("screens.tablet")), print {
    .c-jumbotron-card {
      @apply text-left;
      @apply grid;
      @apply gap-6;
      grid-template-columns: auto 1fr;
      @apply items-center;
    }
  }

  .c-page-list-container {
    @apply px-4;
    @apply mx-auto;
    @apply mt-8;
  }

  @media print {
    .c-page-list-container {
      @apply mx-0;
    }
  }

  .c-page-list {
    @apply max-w-md;
    @apply mx-auto;
    @apply grid;
    @apply grid-cols-1;
    @apply gap-x-6;
    @apply gap-y-12;
  }

  @media screen and (min-width: theme("screens.tablet")) {
    .c-page-list-container {
      @apply max-w-2xl;
    }
    .c-page-list {
      @apply max-w-none;
      @apply grid-cols-2;
    }
  }

  @media screen and (min-width: 1024px) {
    .c-page-list-container {
      @apply max-w-4xl;
    }
    .c-page-list {
      @apply grid-cols-3;
    }
  }

  @media print {
    .c-page-list-item {
      @apply mb-6;
      @apply grid;
      @apply items-center;
      @apply gap-x-4;
      grid-template-columns: 1fr 4fr;
    }
  }

  @media print {
    .c-post-page h1 {
      @apply text-xl;
      @apply mb-2;
    }
  }

  .c-btn {
    @apply rounded;
    @apply px-3;
    @apply py-1;
  }

  .c-btn-primary {
    @apply bg-primary;
    @apply text-on-primary;
  }

  .c-btn-primary:hover {
    @apply bg-primary-600;
    @apply text-on-primary;
  }

  .c-post-meta {
    @apply flex;
    @apply flex-wrap;
  }

  .c-tag-list-item {
    display: inline-block;
    @apply bg-surface;
    @apply rounded;
    @apply px-1;
  }
  .c-tag-list-item:first-child {
    @apply mr-1;
  }
  .c-tag-list-item:last-child {
    @apply ml-1;
  }
  .c-tag-list-item:not(:first-child):not(:last-child) {
    @apply mx-1;
  }

  .markdown h1,
  .markdown h2,
  .markdown h3 {
    @apply font-bold;
  }
  @media screen {
    .markdown h1,
    .markdown h2,
    .markdown h3 {
      @apply mt-10;
      @apply mb-6;
    }
    .markdown p {
      @apply my-4;
    }
  }
  @media print {
    .markdown h1,
    .markdown h2,
    .markdown h3 {
      @apply mt-4;
      @apply mb-2;
    }
    .markdown p {
      @apply my-1;
    }
  }
  .markdown a {
    @apply border-b;
    @apply border-link;
  }
  .markdown ol {
    @apply list-decimal;
    @apply list-outside;
    @apply ml-3;
    @apply p-5;
  }
  .markdown ul {
    @apply list-disc;
    @apply list-outside;
    @apply pl-8;
    @apply my-2;
  }
  .markdown .p-image > img {
    max-height: 20em;
  }
}
